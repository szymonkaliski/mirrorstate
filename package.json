{
  "name": "mirrorstate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build --workspace=packages/vite-plugin-mirrorstate && npm run build --workspace=packages/react-mirrorstate",
    "examples": "npm run dev --workspace=examples",
    "dev:plugin": "npm run dev --workspace=packages/vite-plugin-mirrorstate",
    "dev:react": "npm run dev --workspace=packages/react-mirrorstate",
    "clean": "rm -rf packages/*/dist examples/*/dist"
  },
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
